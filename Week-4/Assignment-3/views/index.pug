extends layout

block content
    header

        h1 Welcome!
        .block
            #signup-action
                //- h1= user or #{user}   or h1(title='My name' + name) #{name}
                h2 Sign up
                form(action='/signup',method='post')
                    label Please enter you email:
                        input(type='text',name="useremail")
                    label Please enter you password:
                        input(type='password',name="userpassword",class="pwd")
                
                    button(type='submit') Sign up!
        .block
            #signin-action
                h2 Sign in
                form(action='/login',method='post')
                    label Please enter you email:
                        input(type='text',name="useremail")
                    label Please enter you password:
                        input(type='password',name="userpassword",class="pwd")
             
                    button(type='submit') login!
                     
   
        
        p#result #{test2}